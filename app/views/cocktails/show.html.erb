<h2 class="heading text-center"><%= @cocktail.name %></h2>

<div class="container-show">

  <div class="img-cocktail-lg">
    <%= cl_image_tag @cocktail.photo.key, height: 400, width: 300, crop: :fill if @cocktail.photo.attached?%>
  </div>

  <div class="container-ingredients">

    <div class="ingredient-contents">

      <% @cocktail.doses.each do |dose| %>
        <h3><%= dose.ingredient.name %></h3>
        <p><%= dose.description %></p>
        <% if @admin %>
          <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-minus-circle btn-remove"></i>
          <% end %>
                        </p>
        <% end %>
      <% end %>

      <div class="links">
        <% if @admin %>
          <i class="fas fa-plus-circle btn-add" type="button" data-toggle="modal" data-target="#exampleModalCenter"></i>
        <% end %>
        <%= link_to "back", root_path, class: "btn-back" %>
      </div>

    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLongTitle">Add a dose!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-form">
          <%= simple_form_for [ @cocktail, @dose ] do |f| %>
            <%= f.association :ingredient, as: :select%>
            <%= f.input :description %>
            <%= f.submit class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
