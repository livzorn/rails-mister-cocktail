<div class="container-mix d-flex justify-content-around">

  <div class="card-mix">
    <%= image_tag "pantry.jpg", alt: "alttext", class: "img-pantry" %>
    <h3 class="heading mt-5">Expand your pantry</h3>
    <div class="container-form">
      <%= simple_form_for @ingredient do |f| %>
        <div class="text-left mt-3">
          <%= f.input :name %>
        </div>
        <%= f.submit class: "btn btn-dark mt-4" %>
      <% end %>
    </div>
  </div>

  <div class="card-mix">
    <%= image_tag "shaker.jpeg", alt: "alttext", class: "img-pantry" %>
    <h3 class="heading">New cocktail</h3>
    <div class="container-form">
      <%= simple_form_for @cocktail do |f| %>
        <div class="text-left">
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
        </div>
        <%= f.submit class: "btn btn-dark mt-3" %>
      <% end %>
    </div>
  </div>

</div>




